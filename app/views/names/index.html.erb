<p id="notice"><%= notice %></p>

<h1>Names</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Is shamei</th>
      <th>Is sitenmei</th>
      <th>Is sei</th>
      <th>Is mei</th>
      <th>Is title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @names.each do |name| %>
      <tr>
        <td><%= name.value %></td>
        <td><%= name.is_shamei %></td>
        <td><%= name.is_sitenmei %></td>
        <td><%= name.is_sei %></td>
        <td><%= name.is_mei %></td>
        <td><%= name.is_title %></td>
        <td><%= link_to t('Show'), name %></td>
        <td><%= link_to t('Edit'), edit_name_path(name) %></td>
        <td><%= link_to t('Destroy'), name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="pager" >
<%= paginate @names %>
</div>

