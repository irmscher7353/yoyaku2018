<p id="notice"><%= notice %></p>

<h1>Line Items</h1>

<table class="line_item-index" >
  <thead>
    <tr>
      <th><%= t '.number' %></th>
      <th><%= t '.name' %></th>
      <th><%= t '.revision' %></th>
      <th><%= t '.title' %></th>
      <th><%= t '.size' %></th>
      <th><%= t '.quantity' %></th>
      <th><%= t '.total_price' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td class="center" ><%= line_item.order.number %></td>
        <td ><%= line_item.order.name %></td>
        <td class="numeric" ><%= line_item.revision %></td>
        <td><%= line_item.product.title.name %></td>
        <td class="center" ><%= line_item.product.size %></td>
        <td class="numeric" ><%= line_item.quantity %></td>
        <td class="numeric" ><%= line_item.total_price_delimited %></td>
        <td><%= link_to t('Show'), line_item,
                class: 'link-show-inline' %></td>
        <td><%= link_to t('Edit'), edit_line_item_path(line_item),
                class: 'link-edit-inline' %></td>
        <% if Rails.env.development? %>
        <td><%= link_to t('Destroy'), line_item,
                class: 'button-destroy-inline',
                method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="pager" >
<%= paginate @line_items %>
</div>

<br>

<%= link_to 'New Line Item', new_line_item_path, class: 'link-new' %>
