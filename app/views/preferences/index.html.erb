<p id="notice"><%= notice %></p>

<h1>Preferences</h1>

<table>
  <thead>
    <tr>
      <th ><%= t 'preferences.name' %></th>
      <th ><%= t 'preferences.value' %></th>
      <th ><%= t 'preferences.updated_at' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @preferences.each do |preference| %>
      <tr>
        <td><%= preference.name %></td>
        <td><%= preference.value %></td>
        <td ><%= preference.updated_at.strftime('%Y-%m-%d') %></td>
        <td><%= link_to t('Show'), preference,
                class: 'link-show-inline' %></td>
        <td><%= link_to t('Edit'), edit_preference_path(preference),
                class: 'link-edit-inline' %></td>
        <% if Rails.env.development? %>
        <td><%= link_to t('Destroy'), preference,
                class: 'button-destroy-inline',
                method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

