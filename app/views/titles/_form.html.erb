<%= form_with(model: title, local: true) do |form| %>
  <% if title.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(title.errors.count, "error") %> prohibited this title from being saved:</h2>

      <ul>
      <% title.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label t 'titles.name' %>
    <%= form.text_field :name, id: :title_name, size: 42 %>
  </div>

  <div class="field">
    <%= form.label t 'titles.priority' %>
    <%= form.number_field :priority, id: :title_priority %>
  </div>

  <div class="field">
    <%= form.label t 'titles.description' %>
    <%= form.text_area :description, id: :title_description, size: "40x10" %>
  </div>

  <div class="field">
    <%= form.label t 'titles.image_url' %>
    <%= form.text_field :image_url, id: :title_image_url, size: 42 %>
  </div>

  <div class="actions">
    <%= form.submit class: 'button-submit' %>
  </div>
<% end %>
