<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Menu</th>
      <th>Number</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Buyer</th>
      <th>Due</th>
      <th>Due datenum</th>
      <th>Means</th>
      <th>Total price</th>
      <th>Amount paid</th>
      <th>Balance</th>
      <th>Payment</th>
      <th>State</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.menu %></td>
        <td><%= order.number %></td>
        <td><%= order.name %></td>
        <td><%= order.phone %></td>
        <td><%= order.address %></td>
        <td><%= order.buyer %></td>
        <td><%= order.due %></td>
        <td><%= order.due_datenum %></td>
        <td><%= order.means %></td>
        <td><%= order.total_price %></td>
        <td><%= order.amount_paid %></td>
        <td><%= order.balance %></td>
        <td><%= order.payment %></td>
        <td><%= order.state %></td>
        <td><%= order.note %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

