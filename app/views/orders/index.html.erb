<p id="notice"><%= notice %></p>

<h1>Orders (<%= session[:menu]['name'] %>)</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Due</th>
      <th>Means</th>
      <th>Total price</th>
      <th>Payment</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td class="numeric" ><%= order.number %></td>
        <td><%= order.name %></td>
        <td><%= order.phone %></td>
        <td><%= order.due.localtime.strftime('%m/%d %H:%M') %></td>
        <td class="center" ><%= order.means %></td>
        <td class="numeric" ><%= number_with_delimiter(order.total_price, delimiter: ',') %></td>
        <td class="center" ><%= order.payment %></td>
        <td class="center" ><%= order.state %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @orders %>

<br>

<%= link_to 'New Order', new_order_path %>
