<p id="notice"><%= notice %></p>

<h1>Orders (<%= session[:menu]['name'] %>)</h1>

<table>
  <thead>
    <tr>
      <th><%= t '.number' %></th>
      <th><%= t '.name' %></th>
      <th><%= t '.phone' %></th>
      <th><%= t '.due' %></th>
      <th><%= t '.means' %></th>
      <th><%= t '.state' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td class="numeric" ><%= order.number %></td>
        <td><%= order.name %></td>
        <td><%= order.phone %></td>
        <td><%= order.due.localtime.strftime('%m/%d %H:%M') %></td>
        <td class="center" ><%= order.means %></td>
        <td class="center" ><%= order.state %></td>
        <td><%= link_to t('Show'), order %></td>
        <td><%= link_to t('Edit'), edit_order_path(order) %></td>
				<!--
        <td><%= link_to t('Destroy'), order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				-->
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @orders %>

<br>

<%= link_to 'New Order', new_order_path %>
