<% (1..4).each do |i| %>
<%= button_tag i, type: :button, remote: true, class: 'quantity-digit',
    onClick: "orders.select_quantity(this);" -%><br/>
<% end %>
<%= button_tag '+', type: :button, remote: true, class: 'quantity-incr',
    onClick: "orders.select_quantity(this);" -%><br/>
<%= button_tag '-', type: :button, remote: true, class: 'quantity-decr',
    onClick: "orders.select_quantity(this);" -%><br/>
